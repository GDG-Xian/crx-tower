{
  "staticFiles": [
    "src/manifest.json",
    "src/*.html",
    "src/img/**/*",
    "src/js/bridge.js"
  ],

  "tpls": [
    "src/tpl/**/*"
  ],
  
  "scripts": [
    "!src/js/bridge.js",
    "src/js/*.js"
  ],

  "allScripts": [
    "Gulpfile.js",
    "src/js/**/*"
  ],

  "styles": [
    "src/css/*.scss"
  ],

  "allStyles": [
    "src/css/**/*"
  ]
}