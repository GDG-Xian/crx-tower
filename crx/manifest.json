{
	"manifest_version": 2,
	
	"name": "Twoer.im Plus",
	"description": "Improve twoer.im",
	"version": "1.1",
	
	"icons": {
		"48": "icon48.png",
		"64": "icon64.png",
		"128": "icon128.png"
	},
	
	"permissions": [
		"tabs", "storage" 
	],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "browser_action": {
        "default_icon": "icon48.png",
        "default_title": "Tower.im 增强版",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

	"content_scripts": [
		{
			"matches": ["https://tower.im/*"],
			"js": [
			  "vendor/jquery-2.1.0.min.js",
			  "vendor/sugar.min.js",
			  "javascripts/application.js",
			  "javascripts/contentscript.js"
			],
			"css": ["sprites.css"],
			"run_at": "document_start"
		}
	],

	"web_accessible_resources": [
       "sprites.png"
    ]
}
