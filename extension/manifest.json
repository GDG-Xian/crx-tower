{
	"manifest_version": 2,
	
	"name": "Twoer.im Plus",
	"description": "Improve twoer.im",
	"version": "1.1",
	
	"icons": {
		"48": "icon48.png",
		"64": "icon64.png",
		"128": "icon128.png"
	},
	
	"permissions": [
		"tabs"
	],

    "browser_action": {
        "default_icon": "icon48.png",
        "default_title": "Tower.im 增强版",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

	"content_scripts": [
		{
			"matches": ["https://tower.im/*"],
			"js": ["jquery-2.1.0.min.js", "contentscript.js"],
			"css": ["sprites.css"]
		}
	],

	"web_accessible_resources": [
       "sprites.png"
    ]
}
