{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "1.3",
  "manifest_version": 2,
  "default_locale": "en",

  "icons": {
    "48": "img/icon-48.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png"
  },

  "content_scripts": [{
    "matches": [
      "https://tower.im/*"
    ],

    "js": [
      "scripts/contentscript.js"
    ],

    "css": [
      "styles/contentstyle.css"
    ]
  }],

  "permissions": [
    "tabs", "https://tower.im/*"
  ],

  "web_accessible_resources": [
    "pages/bridge.js"
  ]
}
