{
	"manifest_version": 2,
	
	"name": "Tower.im Plus",
	"description": "Improve tower.im",
	"version": "1.2",
	
	"icons": {
		"48": "img/icon48.png",
		"64": "img/icon64.png",
		"128": "img/icon128.png"
	},
	
	"permissions": [
		"tabs", "https://tower.im/*"
	],
	
	"content_scripts": [{
		"matches": [
			"https://tower.im/*"
		],

		"js": [
			"js/contentscript.js"
		],

		"css": [
			"css/contentstyle.css"
		]
	}]
}
